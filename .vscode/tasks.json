{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc check problems",
      "type": "shell",
      "command": "npx",
      // "isBackground": true,
      "args": ["tsc", "--noEmit"],
      "presentation": {
        "reveal": "never",
        "echo": false,
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": {
        "base": "$tsc",
        "applyTo": "allDocuments"
      }
    }
  ]
}